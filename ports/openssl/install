URL="https://github.com/openssl/openssl/archive/refs/tags/"
VERSION="3.0.5"
SRC_FILENAME="openssl-"$VERSION".tar.gz"

function configure_port() {
	./Configure								\
		-m32								\
		linux-generic32							\
		no-sse2								\
		no-threads							\
		-latomic							\
		-static								\
		--prefix=/							\
		--openssldir=/etc/ssl
}

function build_port() {
	make -j$NJOBS
}

function install_port() {
	# install
	make install DESTDIR=$SYSROOT

	# patch libcrypto.pc
	sed 's/-lcrypto/-lcrypto -ldl -latomic/' $SYSROOT/lib/pkgconfig/libcrypto.pc > $SYSROOT/lib/pkgconfig/libcrypto.pc.tmp
	mv $SYSROOT/lib/pkgconfig/libcrypto.pc.tmp $SYSROOT/lib/pkgconfig/libcrypto.pc
}
