URL="https://ftp.gnu.org/gnu/nano/"
VERSION="6.3"
SRC_FILENAME="nano-"$VERSION".tar.xz"

function configure_port() {
	./configure								\
		--host=$TARGET							\
		--disable-nls							\
		--disable-threads						\
		--disable-browser						\
		--prefix="/usr"							\
		CFLAGS="-static" LDFLAGS="-static"
}

function build_port() {
	make -j$NJOBS
}

function install_port() {
	make install DESTDIR=$SYSROOT
}
