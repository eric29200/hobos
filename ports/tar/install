URL="https://ftp.gnu.org/gnu/tar/"
VERSION="1.34"
SRC_FILENAME="tar-"$VERSION".tar.xz"

function configure_port() {
	./configure								\
		--host=$TARGET							\
		--disable-nls							\
		--prefix="/usr"							\
		CC=$MUSL_CC LD=$MUSL_CC CFLAGS="-static" LDFLAGS="-static"
}

function build_port() {
	make -j$NJOBS
}

function install_port() {
	make install DESTDIR=$SYSROOT
}
