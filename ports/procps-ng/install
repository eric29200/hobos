URL="https://fossies.org/linux/misc/"
VERSION="4.0.0"
SRC_FILENAME="procps-ng-"$VERSION".tar.xz"

function configure_port() {
	./configure								\
		--host=$TARGET							\
		--disable-shared						\
		--enable-static							\
		--disable-nls							\
		--disable-w							\
		--disable-numa							\
		--prefix="/usr"							\
		CFLAGS="--static -D__thread=''" LDFLAGS="--static" PKG_CONFIG=$PKG_CONFIG
}

function build_port() {
	make -j$NJOBS
}

function install_port() {
	make install DESTDIR=$SYSROOT
}
