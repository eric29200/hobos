URL="https://zlib.net/"
VERSION="1.2.13"
SRC_FILENAME="zlib-"$VERSION".tar.xz"

function configure_port() {
	./configure								\
		--prefix="/"
}

function build_port() {
	make -j$NJOBS
}

function install_port() {
	make install DESTDIR=$MUSL_DIR

	mkdir -p $SYSROOT/lib
	cp -P libz.* $SYSROOT/lib/
}
