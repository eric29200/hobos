URL="http://gondor.apana.org.au/~herbert/dash/files/"
VERSION="0.5.11.5"
SRC_FILENAME="dash-"$VERSION".tar.gz"

function configure_port() {
	./configure								\
		--host=$TARGET							\
		--enable-static							\
		--prefix="/"
}

function build_port() {
	make -j$NJOBS
}

function install_port() {
	make install DESTDIR=$SYSROOT
	cd $SYSROOT/bin
	ln -sf dash sh
}
