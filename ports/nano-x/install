URL="https://github.com/ghaerr/microwindows"
SRC_FILENAME="microwindows"
URL_GIT=1

function configure_port() {
	cd src
	cp Configs/config.linux-fb config
}

function build_port() {
	make -j$NJOBS CC=$CC CXX=$CXX LD=$LD AR=$AR AS=$AS RANLIB=$RANLIB CFLAGS="-static" LDFLAGS="-static"
}

function install_port() {
	cp -Rv bin/* $SYSROOT/usr/bin/
}
