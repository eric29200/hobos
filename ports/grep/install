URL="https://ftp.gnu.org/gnu/grep/"
VERSION="3.7"
SRC_FILENAME="grep-"$VERSION".tar.xz"

function configure_port() {
	./configure								\
		--host=$TARGET							\
		--disable-nls							\
		--disable-threads						\
		--prefix="/usr"
}

function build_port() {
	make -j$NJOBS
}

function install_port() {
	make install DESTDIR=$SYSROOT
}
