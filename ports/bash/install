VERSION="5.1.16"
SRC_FILENAME="bash-"$VERSION".tar.gz"
URL="https://ftp.gnu.org/gnu/bash/"$SRC_FILENAME

function configure_port() {
	./configure								\
		--host=$HOST							\
		--disable-nls							\
		--disable-threads						\
		--without-gnu-malloc						\
		--prefix="/usr"
}

function build_port() {
	make -j$NJOBS
}

function install_port() {
	make install DESTDIR=$SYSROOT
}
