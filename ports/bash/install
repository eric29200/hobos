URL="https://ftp.gnu.org/gnu/bash/"
VERSION="5.1.16"
SRC_FILENAME="bash-"$VERSION".tar.gz"

function configure_port() {
	./configure								\
		--host=$TARGET							\
		--disable-nls							\
		--disable-threads						\
		--without-gnu-malloc						\
		--prefix="/usr"
}

function build_port() {
	make -j$NJOBS
}

function install_port() {
	make install DESTDIR=$SYSROOT
}