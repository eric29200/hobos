VERSION="2.4.8"
SRC_FILENAME="expat-"$VERSION".tar.xz"
URL="https://github.com/libexpat/libexpat/releases/download/R_2_4_8/"$SRC_FILENAME

function configure_port() {
	./configure								\
		--host=$HOST							\
		--without-docbook						\
		--prefix=$SYSROOT"/usr"
}

function build_port() {
	make -j$NJOBS
}

function install_port() {
	make install
}
