URL="https://download.sourceforge.net/libpng/"
VERSION="1.6.37"
SRC_FILENAME="libpng-"$VERSION".tar.gz"

function configure_port() {
	./configure								\
		--host=$TARGET							\
		--prefix="/"							\
		CC=$CC
}

function build_port() {
	make -j$NJOBS CC=$CC
}

function install_port() {
	make install DESTDIR=$SYSROOT
}
