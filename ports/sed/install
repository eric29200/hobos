URL="https://ftp.gnu.org/gnu/sed/"
VERSION="4.8"
SRC_FILENAME="sed-"$VERSION".tar.xz"

function configure_port() {
	./configure								\
		--host=$HOST							\
		--disable-nls							\
		--disable-threads						\
		--prefix="/usr"
}

function build_port() {
	make -j$NJOBS
}

function install_port() {
	make install DESTDIR=$SYSROOT
}
