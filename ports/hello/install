URL="https://ftp.gnu.org/gnu/hello/"
VERSION="2.12.1"
SRC_FILENAME="hello-"$VERSION".tar.gz"

function configure_port() {
	./configure								\
		--host=$HOST							\
		--disable-nls							\
		--disable-threads						\
		--prefix="/usr"
}

function build_port() {
	make -j$NJOBS
}

function install_port() {
	make install DESTDIR=$SYSROOT
}
