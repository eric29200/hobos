URL="https://ftp.gnu.org/gnu/gzip/"
VERSION="1.12"
SRC_FILENAME="gzip-"$VERSION".tar.xz"

function configure_port() {
	./configure								\
		--host=$TARGET 							\
		--disable-nls							\
		--disable-threads						\
		--disable-year2038						\
		--prefix="/usr"							\
		CFLAGS="-static" LDFLAGS="-static"
}

function build_port() {
	make -j$NJOBS
}

function install_port() {
	make install DESTDIR=$SYSROOT
}
