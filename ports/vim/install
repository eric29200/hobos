URL="ftp://ftp.vim.org/pub/vim/unix/"
VERSION="8.1"
SRC_FILENAME="vim-"$VERSION".tar.bz2"

function configure_port() {
	./configure								\
		--host=$TARGET							\
		--disable-nls							\
		--disable-gpm							\
		--disable-sysmouse						\
		--with-tlib=ncursesw						\
		--with-features=normal						\
		--prefix="/usr"							\
		CFLAGS="-static" LDFLAGS="-static"
}

function build_port() {
	make -j$NJOBS
}

function install_port() {
	make install DESTDIR=$SYSROOT
	cd $SYSROOT/bin
	ln -sf vim vi
}
