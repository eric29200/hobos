URL="https://ftp.gnu.org/gnu/coreutils/"
VERSION="9.1"
SRC_FILENAME="coreutils-"$VERSION".tar.gz"

function configure_port() {
	./configure								\
		--host=$HOST							\
		--disable-threads						\
		--disable-nls							\
		--disable-acl							\
		--disable-rpath							\
		--disable-xattr							\
		--disable-libcap						\
		--without-selinux						\
		--enable-no-install-program=factor,ptx				\
		--prefix="/usr"
}

function build_port() {
	make -j$NJOBS
}

function install_port() {
	make install DESTDIR=$SYSROOT
}
